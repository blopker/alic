{
  "$schema": "https://schema.tauri.app/config/2",
  "mainBinaryName": "Alic",
  "productName": "Alic Image Compressor",
  "version": "2.4.2",
  "identifier": "io.kbl.alic",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "acceptFirstMouse": true,
        "fullscreen": false,
        "height": 370,
        "minHeight": 370,
        "minWidth": 600,
        "resizable": true,
        "title": "Alic Image Compressor",
        "width": 600
      },
      {
        "acceptFirstMouse": true,
        "create": false,
        "dragDropEnabled": false,
        "fullscreen": false,
        "height": 370,
        "label": "settings",
        "minHeight": 370,
        "minWidth": 600,
        "resizable": true,
        "title": "Alic Settings",
        "url": "index.html#/settings",
        "width": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "fileAssociations": [
      {
        "ext": ["jpg"]
      },
      {
        "ext": ["jpeg", "jpg"]
      },
      {
        "ext": ["png"]
      },
      {
        "ext": ["gif"]
      },
      {
        "ext": ["webp"]
      },
      {
        "ext": ["tiff"]
      }
    ],
    "icon": ["icons/icon.icns"],
    "macOS": {
      "minimumSystemVersion": "13"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["alic", "alicscheme"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ5RjA0MDEwNTA2OUIxQ0YKUldUUHNXbFFFRUR3U1R5SDJLYThCdUp3N1JyZCsvV09SSE9Ca1NleCtNUzJRUWNRRkNHT3VFRlkK",
      "endpoints": [
        "https://github.com/blopker/alic/releases/latest/download/latest.json"
      ]
    }
  }
}
